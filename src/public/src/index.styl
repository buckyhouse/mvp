.user-address
    line-height: 30pt
    color: white

.small-margin-left
    margin-left: 10px

.card-container
    width: 100%
    padding-right: 0
    padding-left: 0
    margin: 0 10px 10px 10px

    &:last-child
        margin: 0 10px 0 10px

.content-provider-container
    max-width: 800px
    padding: 30px 10px
    margin: auto

    .list-group
        width: 100%

.buttons-list button
    margin-right: 10px
    margin-top: 10px

.bucky-small-text
    margin-left: 20px
    color: rgb(195, 177, 17)

.advertiser-block
    width: 100%
    border-radius: 10px;
    margin: 5px;
    padding: 15px;
    box-shadow: 0 0 20px 0px #b1b1b1;
    cursor: pointer
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;

    &:hover
        background-color: var(--yellow)
        opacity: 0.9

    &.selected
        background-color: var(--yellow)

@media (min-width: 576px)
    .advertiser-block
        width: calc(50% - 10px)

@media (min-width: 992px)
    .advertiser-block
        width: calc(100% / 3 - 10px)
